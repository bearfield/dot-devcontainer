{
    "name": "packer-1.7",
    "image": "kumanoryo/packer-1.7:latest",

    "settings": {
        "terminal.intergrated.shell.linux": "/usr/bin/fish",
        "workbench.colorCustomizations": {
            "titleBar.activeBackground": "#02A8EF",
            "activityBarBadge.background": "#02A8EF",
            "statusBar.background": "#02A8EF"
        }
    },

    "remoteUser": "kumano_ryo",

    "mounts": [
        "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
    ],

    "extensions": [
	]
}